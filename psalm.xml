<?xml version="1.0"?>
<psalm
    errorLevel="1"
	phpVersion="8.2"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
	<issueHandlers>
		<UnusedClass>
			<errorLevel type="suppress">
				<!-- this is a class library, therefore some code is unused -->
				<file name="src/Argv.php" />
				<file name="src/ArgvGeneric.php" />
				<file name="src/ArgvReference.php" />
			</errorLevel>
		</UnusedClass>
		<ClassMustBeFinal>
			<errorLevel type="suppress">
				<!-- actually, I extend ArgvGeneric & Argv very often. It is the
				very purpose of ArgvGeneric to be extended, in order not to
				write boilerplate, and I often extend Argv to have more obvious
				names like getConfigPath instead of getValue("config-path").
				-->
				<directory name="src" />
			</errorLevel>
		</ClassMustBeFinal>

		
	</issueHandlers>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
